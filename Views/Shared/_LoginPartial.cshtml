@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="btn btn-outline-secondary" style="margin-right:5px;">Logout</button>
        </form>
    </li>
}
else
{
<li class="nav-item">
    <a class="btn btn-outline-secondary" asp-area="Identity" asp-page="/Account/Register" style="margin-right:5px;">Register</a>
</li>
     
    <li class="nav-item">
        <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login" style="margin-right:5px;">Login</a>
    </li>
}
</ul>
