@model List<Photo>

@{
    ViewData["Title"] = "Photos";
}

<h2 class="text-center">
    <span>Photos:</span>
</h2>
<br />
@if (Model.Count == 0)
{
<div class="align-content-center my-auto">
    <h4 style="text-align: center"> Looks like they don't have any photos yet. &#9785;</h4>
</div>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Image
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <img src="@("~/image/" + item.ImageName)" asp-append-version="true" width="250" height="250" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
            </tr>
        }
    </tbody>
</table>
}
