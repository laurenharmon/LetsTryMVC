@using LetsTryMVC.Models
@model List<Product>

<h1>Products</h1>
<p>
    <a asp-controller="Products" asp-action="Create">Add Product To List</a>
</p>

<table class="table">
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <th scope="col">Category</th>
        <th scope="col">Add Item To Cart</th>

    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Price.ToString("c")</td>
            <td>@product.Category.Name</td>
            <td>@Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = product.Id }, new { @class = "btn btn-info" })</td>
         </tr>

    }
</table>