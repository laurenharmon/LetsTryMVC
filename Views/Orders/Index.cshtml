@model List<CustomerOrder>

@{
    ViewBag.Title = "My Orders";
}


@if (Model.Count == 0)
{
    <div class="mx-auto px-3 py-3 pt-md-5 pb-md-4 text-center">
        @Html.ActionLink("You don't have any orders, yet. Continue Shopping!", "Index", "Products", null, new { @class = "btn btn-outline-info btn-lg btn-block" })
    </div>
} else
{
    <div class="mx-auto px-3 py-3 pt-md-5 pb-md-4 text-center">
        <h2>All Orders for @ViewBag.User</h2>
    </div>
    <table class="table">
        <tr>
            <th scope="col">Order Number</th>
            <th scope="col">Order Date</th>
            <th scope="col">Total</th>
        </tr>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.DateCreated.ToLongDateString()</td>
                <td>@order.Amount.ToString("c")</td>
            </tr>
        }
    </table>
}
