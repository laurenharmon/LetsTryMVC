@using LetsTryMVC.ViewModels 
@model LetsTryMVC.Models.ProductCategory


<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Create</title>
    </head>
    <body>

        <h4>Product Category</h4>

        <form method="post" action="/productcategory/create">
            <div asp-controller="ProductCategory" asp-action="Create" class="form-group">
                <label asp-for="Name">New Category: </label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <input type="submit" value="Add Category" />
        </form>
        </body>
</html>
