@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Home</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <section>
        <div>
            <div class="text-center">
                <h3 class="display-4 m-4">Welcome to Let's Try</h3>
            </div>

            <div class="info" style="float: left;">
                <a>
                    <img src="~/Image/website/home image-resized-sm.jpg" class="img-fluid" style="height:auto;" />
                </a>
            </div>
            <div class="description"
                 style="top: 50%; -ms-transform: translateY(50%); display: flex; flex-direction: column; float: right; text-align:center; align-content:center;">
                <h1>Get the Box.</h1>
                <h5>Make Your Next Favorite Thing.</h5>
                <span style="display: inline;">@Html.ActionLink("Get Started", "Index", "Products", null, new { @class = "btn btn-block btn-lg btn-primary mb-3" })</span>
                <span style="display: inline;"><a asp-area="Identity" asp-page="/Account/Register" style="color:black;" class="btn btn-outline-dark">Register As A Member</a></span>

            </div>
        </div>
    </section>
</body>
</html>
